<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    tools:context=".AddMembersDialogFragment"
    android:background="@color/main_color_background">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textAddMember"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="Добавить гостя"
            android:fontFamily="@font/roboto"
            android:textSize="20sp"
            android:background="@color/dark_pink"
            android:textColor="@color/main_color_background"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >

        </TextView>
        <RadioGroup
            android:id="@+id/radioGroupType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textAddMember">

            <RadioButton
                android:id="@+id/radioIndividual"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:buttonTint="@color/dark_pink"
                android:textColor="@color/gray"
                android:text="Индивидуальный"
                android:checked="true"/>

            <RadioButton
                android:id="@+id/radioGroup"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:buttonTint="@color/dark_pink"
                android:textColor="@color/gray"
                android:layout_weight="1"
                android:text="Групповой"/>

        </RadioGroup>
        <EditText
            android:id="@+id/name_member"
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/radioGroupType"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:hint="Введите ФИО гостя"
            android:textSize="16sp"
            android:backgroundTint="@color/dark_pink"
            android:textColorHint="@color/gray"
            android:fontFamily="@font/roboto"
            >

        </EditText>
        <EditText
            android:id="@+id/number"
            android:inputType="phone"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/name_member"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/addContact"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:hint="Введите номер телефона"
            android:textSize="16sp"
            android:backgroundTint="@color/dark_pink"
            android:textColorHint="@color/gray"
            android:fontFamily="@font/roboto"
            >

        </EditText>
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/addContact"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            android:padding="8dp"
            android:adjustViewBounds="true"
            android:src="@drawable/icon_add_contact"
            app:layout_constraintTop_toBottomOf="@+id/name_member"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/number"
            >

        </androidx.appcompat.widget.AppCompatImageButton>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/contentContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/number"
            app:layout_constraintBottom_toTopOf="@id/addMemberButton"
            android:layout_marginTop="10dp">

            <RadioGroup
                android:id="@+id/individualContent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:visibility="visible">

                <RadioButton
                    android:id="@+id/disposableQR"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray"
                    android:textSize="16sp"
                    android:checked="true"
                    android:buttonTint="@color/dark_pink"
                    android:text="Одноразовый QR-код" />

                <RadioButton
                    android:id="@+id/reusableQR"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray"
                    android:textSize="16sp"
                    android:buttonTint="@color/dark_pink"
                    android:layout_marginTop="8dp"
                    android:text="Многоразовый QR-код" />
            </RadioGroup>

            <EditText
                android:id="@+id/groupContent"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:inputType="number"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:hint="Введите количество участников"
                android:textSize="16sp"
                android:backgroundTint="@color/dark_pink"
                android:textColorHint="@color/gray"
                android:fontFamily="@font/roboto"
                android:visibility="gone" />

        </androidx.constraintlayout.widget.ConstraintLayout>




        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/addMemberButton"
            android:background="@drawable/disign_button"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginStart="70dp"
            android:layout_marginEnd="70dp"
            android:text="Добавить"
            android:textColor="@color/main_color_background"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/contentContainer"
            android:layout_marginBottom="15dp"
            >

        </androidx.appcompat.widget.AppCompatButton>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>